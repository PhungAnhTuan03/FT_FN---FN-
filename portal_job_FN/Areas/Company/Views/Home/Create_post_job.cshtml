@model portal_job_FN.Models.PostJob

@{
    ViewData["Title"] = "Create Post Job";
    Layout = "~/Views/Shared/_Layout_Company.cshtml";
}

<h1>Create</h1>

<h4>post_job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="job_name" class="control-label">Tên công việc</label>
                <input asp-for="job_name" class="form-control" />
                <span asp-validation-for="job_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="job_description" class="control-label">Mô tả công việc</label>
                <input asp-for="job_description" class="form-control" />
                <span asp-validation-for="job_description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="required_skill" class="control-label" >Yêu cầu kỹ năng</label>
                <input asp-for="required_skill" class="form-control" />
                <span asp-validation-for="required_skill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="benefit" class="control-label">Phúc lợi</label>
                <input asp-for="benefit" class="form-control" />
                <span asp-validation-for="benefit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employmentType" class="control-label">Hình thức làm việc</label>
                <input asp-for="employmentType" class="form-control" />
                <span asp-validation-for="employmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salary_min" class="control-label">Lương từ</label>
                <input asp-for="salary_min" class="form-control" />
                <span asp-validation-for="salary_min" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salary_max" class="control-label">Đến</label>
                <input asp-for="salary_max" class="form-control" />
                <span asp-validation-for="salary_max" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="detail_location" class="control-label">Địa điểm công ty</label>
                <input asp-for="detail_location" class="form-control" />
                <span asp-validation-for="detail_location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apply_date" class="control-label">Hạn nộp hồ sơ</label>
                <input asp-for="apply_date" class="form-control datepicker" asp-format="{0:dd/MM/yy}" />
                <span asp-validation-for="apply_date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="job_LocationId" class="control-label"></label>
                <select asp-for="job_LocationId" asp-items="ViewBag.locations" class="form-control">
                    <option value="">-- Chọn tỉnh - Thành phố --</option>
                </select>
                <span asp-validation-for="job_LocationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="experienceId" class="control-label">Kinh nghiệm ứng viên</label>
                <select asp-for="experienceId" asp-items="ViewBag.experiences" class="form-control">
                    <option value="">-- Chọn Kinh nghiệm --</option>
                </select>
                <span asp-validation-for="experienceId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="majorId" class="control-label">Chuyên ngành</label>
                <select asp-for="majorId" asp-items="ViewBag.majors" class="form-control">
                    <option value="">-- Chọn chuyên ngành --</option>
                </select>
                <span asp-validation-for="majorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    $(document).ready(function () {
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy', // Định dạng ngày tháng
            autoclose: true // Tự động đóng khi chọn ngày
        });
    });
</script>
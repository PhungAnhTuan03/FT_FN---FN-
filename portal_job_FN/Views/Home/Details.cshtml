@model portal_job_FN.Models.PostJob
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header End -->
<div class="container-xxl py-5 bg-dark page-header mb-5">
    <div class="container my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Job Detail</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-uppercase">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Job Detail</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Header End -->
<!-- Job Detail Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row gy-5 gx-4">
            <div class="col-lg-8">
                <div class="d-flex align-items-center mb-5">
                    <img class="flex-shrink-0 img-fluid border rounded" src="@Model.applicationUser?.image_url" alt="" style="width: 80px; height: 80px;">
                    <div class="text-start ps-4">
                        <h3 class="mb-3">@Model.job_name</h3>
                        <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@Model.job_Location?.province_name</span>
                        <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>@Model.employmentType</span>
                        <span class="text-truncate me-3"><i class="fas fa-briefcase text-primary me-2"></i>@Model.experience?.experience_name</span>
                        <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>@string.Format("{0} Triệu - {1} Triệu", @Model.salary_min, @Model.salary_max)</span>
                    </div>
                </div>

                <div class="mb-5">
                    <h4 class="mb-3">Mô tả công việc</h4>
                    <p>@Model.job_description</p>
                    <h4 class="mb-3">Yêu cầu ứng viên</h4>
                    <p>@Model.required_skill</p>
                    </ul>
                    <h4 class="mb-3">Quyền lợi</h4>
                    <p>@Model.benefit</p>
                    <h4 class="mb-3">Địa chỉ làm việc</h4>
                    <p>@Model.detail_location</p>
                </div>

                <div class="">
                    <h4 class="mb-4">Ứng tuyển ngay</h4>
@*                     <form>
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                                <input type="text" class="form-control" placeholder="Your Name">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="email" class="form-control" placeholder="Your Email">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="text" class="form-control" placeholder="Portfolio Website">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="file" class="form-control bg-white">
                            </div>
                            <div class="col-12">
                                <textarea class="form-control" rows="5" placeholder="Coverletter"></textarea>
                            </div>
                          
                        </div>
                    </form> *@
                    <div class="col-12">
                        <a class="btn btn-primary w-100" asp-action="Apply_job" asp-route-id="@Model.Id">Apply Now</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="bg-light rounded p-5 mb-4 wow slideInUp" data-wow-delay="0.1s">
                    <h4 class="mb-4">Tóm tắt công việc</h4>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Đăng ngày: @Model.create_at</p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Vị trí: @Model.job_name</p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Kinh nghiệm: @Model.experience?.experience_name</p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Hình thức làm việc: @Model.employmentType</p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Mức lương từ: @string.Format("{0} Triệu - {1} Triệu", @Model.salary_min, @Model.salary_max)</p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Địa điểm: @Model.job_Location?.province_name</p>
                    <p class="m-0"><i class="fa fa-angle-right text-primary me-2"></i>Hạn nộp hồ sơ: @string.Format("{0:dd/MM/yyyy}", @Model.apply_date)</p>
                </div>
                <div class="bg-light rounded p-5 wow slideInUp" data-wow-delay="0.1s">
                    <h4 class="mb-4">Giới thiệu về công ty</h4>
                    <p class="m-0">@Model.applicationUser?.introduce_company</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Job Detail End -->